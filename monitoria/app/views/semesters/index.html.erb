<p id="notice"><%= notice %></p>

<h1>Semesters</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Ano</th>
      <th>Periodo</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.ano %></td>
        <td><%= semester.periodo %></td>
        <td><%= semester.inicio %></td>
        <td><%= semester.fim %></td>
        <td><%= link_to 'Visualizar', semester %></td>
        <td><%= link_to 'Editar', edit_semester_path(semester) %></td>
        <td><%= link_to 'Deletar', semester, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Semestre', new_semester_path %>
