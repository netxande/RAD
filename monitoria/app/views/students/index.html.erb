<p id="notice"><%= notice %></p>

<div class="alert alert-dismissible alert-success">
  <h4 class="alert-heading" align="center">Alunos</h4>
</div>

<table class="table table-hover ">
  <thead>
    <tr>
      <th>Nome</th>
      <!--<th>Matricula</th>
      <th>Email</th>!-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="table-info">
        <td><%= student.nome %></td>
        <!--<td><%= student.matricula %></td>
        <td><%= student.email %></td>!-->
        <td><%= link_to 'Visualizar', student %></td>
        <td><%= link_to 'Editar', edit_student_path(student) %></td>
        <td><%= link_to 'Deletar', student, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center>
  <%= button_to 'Novo Aluno', new_student_path, options={:method => :get, class: 'btn btn-success'} %>
</center>
